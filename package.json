{
  "name": "@jayree/sfdx-plugin-source",
  "description": "A Salesforce CLI plugin containing commands to generate and compare sfdx source snapshot files or manipulate local source tracking.",
  "version": "1.3.30",
  "author": "jayree",
  "type": "module",
  "bugs": "https://github.com/jayree/sfdx-plugin-source/issues",
  "dependencies": {
    "@jayree/changelog": "^1.1.8",
    "@oclif/core": "^3.14.1",
    "@salesforce/sf-plugins-core": "^5.0.8",
    "@salesforce/source-tracking": "^5.1.2",
    "debug": "^4.3.4",
    "deep-object-diff": "^1.1.9",
    "fast-xml-parser": "^4.3.2",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.0",
    "ignore": "^5.3.0",
    "object-path": "^0.11.8",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@oclif/plugin-command-snapshot": "^5.0.3",
    "@oclif/plugin-help": "^6.0.8",
    "@salesforce/dev-scripts": "^8.0.0",
    "@salesforce/ts-sinon": "^1.4.19",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/object-path": "^0.11.4",
    "c8": "^8.0.1",
    "eslint-config-oclif": "^5.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-sf-plugin": "^1.16.15",
    "is-ci": "^3.0.1",
    "oclif": "^4.0.4",
    "patch-package": "^8.0.0",
    "prettier": "^3.1.1",
    "pretty-quick": "^3.1.3",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/oclif.manifest.json",
    "/CHANGELOG.md",
    "/bin/is-sfdx.js",
    "/schemas",
    "/oclif.lock"
  ],
  "homepage": "https://github.com/jayree/sfdx-plugin-source",
  "keywords": [
    "source",
    "snapshot",
    "source",
    "tracking",
    "sfdx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "hooks": {
      "prerun": "./lib/hooks/prerun",
      "update": "./lib/hooks/changelog",
      "scopedPreRetrieve": "./lib/hooks/scopedPreRetrieve",
      "scopedPostRetrieve": "./lib/hooks/scopedPostRetrieve"
    },
    "topics": {
      "jayree": {
        "description": "manifest, source, and org automation toolset",
        "subtopics": {
          "project": {
            "description": "Work with projects, such as fix retrieved metadata.",
            "subtopics": {
              "store": {
                "description": "Store revision counter number.",
                "subtopics": {
                  "tracking": {
                    "description": "Store revision counter number."
                  }
                }
              }
            }
          }
        }
      }
    },
    "devPlugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-command-snapshot"
    ],
    "info": {
      "releasenotes": {
        "distTagUrl": "https://registry.npmjs.org/-/package/@jayree/sfdx-plugin-source/dist-tags",
        "releaseNotesPath": "https://github.com/jayree/sfdx-plugin-source/tree/main",
        "releaseNotesFilename": "CHANGELOG.md"
      }
    }
  },
  "repository": "jayree/sfdx-plugin-source",
  "scripts": {
    "build": "wireit",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "wireit",
    "docs": "sf-docs",
    "format": "wireit",
    "lint": "wireit",
    "prepack": "sf-prepack",
    "prepare": "patch-package && sf-install",
    "test": "wireit",
    "test:compile": "wireit",
    "test:only": "wireit",
    "version": "oclif readme --no-aliases"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "lint"
      ]
    },
    "compile": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.ts",
        "**/tsconfig.json",
        "messages/**"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "format": {
      "command": "prettier --write \"+(src|test|schemas)/**/*.+(ts|js|json)|command-snapshot.json\"",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "schemas/**/*.json",
        "command-snapshot.json",
        ".prettier*"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint --color --cache --cache-location .eslintcache .",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "messages/**",
        "**/.eslint*",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:compile",
        "test:only",
        "test:deprecation-policy",
        "lint",
        "test:json-schema"
      ]
    },
    "test:compile": {
      "command": "tsc -p \"./test\" --pretty",
      "files": [
        "test/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test:deprecation-policy": {
      "command": "ts-node \"./bin/dev.js\" snapshot:compare",
      "files": [
        "src/**/*.ts"
      ],
      "output": [],
      "dependencies": [
        "compile"
      ]
    },
    "test:json-schema": {
      "command": "ts-node \"./bin/dev.js\" schema:compare",
      "files": [
        "src/**/*.ts",
        "schemas"
      ],
      "output": []
    },
    "test:only": {
      "command": "c8 mocha \"test/**/*.test.ts\"",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc"
      ],
      "output": []
    }
  }
}
